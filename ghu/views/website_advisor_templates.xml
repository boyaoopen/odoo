<?xml version="1.0" encoding="utf-8"?>
<odoo>
<template id="advisor" inherit_id="ghu.advisor" customize_show="True" name="Advisors">
    <xpath expr="//div[hasclass('oe_structure')]" position="after">
        <section class="pt32 pb32" id="advisor">
            <t t-set="advisor_domain" t-value="[] if is_publisher else [('website_published', '=', True)]" />
            <t t-set="advisor" t-value="request.env['ghu.advisor'].search()" />
            <div class="container" t-if="len(advisor)">
                <div class="row">
                    <div class="col-lg-12 text-center">
                        <h2>Our Team</h2>
                    </div>
                </div>
                <div class="row">
                    <div t-foreach="advisor" t-as="advisor" class="col-md-3 col-xl-2 mt16 text-center">
                        <img t-att-src="website.image_url(advisor, 'image_medium')" class="img shadow rounded" alt="Advisor"/>
                        <div class="mt8">
                            <strong t-field="advisor.name"></strong>
                        </div>
                        <div t-field="advisor.job_id"/>
                        <div t-field="advisor.public_info" class="text-muted mt16 d-block mx-auto"/>
                    </div>
                </div>
            </div>
        </section>
    </xpath>
</template>

</odoo>