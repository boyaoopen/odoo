<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="mail.template" id="ghu_doctoral_application_confirmation_template">
            <field name="name">Doctoral Application Confirmation</field>
            <field name="model_id" ref="model_ghu_application"></field>
            <field name="subject">Your Application at Global Humanistic University</field>
            <field name="body_html">We are pleased to inform you, ${object.first_name}, that we have successfully received your application at the Global Humanistic University.
Our academic registrar will now use your application to check whether you meet all the requirements for a doctoral program at GHU. Please note that this is a very time-consuming task and can take up to three weeks.</field>
            <field name="email_from">office@ghu.edu.cw</field>
            <field name="use_default_to">false</field>
            <field name="email_to">${object.email}</field>
            <field name="user_signature">true</field>
            <field name="auto_delete">false</field>
        </record>
        <record model="ir.actions.server" id="ghu_doctoral_application_send_confirmation_email">
            <field name="name">Send Doctoral Application Confirmation Email</field>
            <field name="model_id" ref="model_ghu_application"/>
            <field name="trigger">on_create</field>
            <field name="type">ir.actions.server</field>
            <field name="state">email</field>
            <field name="template_id" ref="ghu_doctoral_application_confirmation_template"/>
        </record>
        <record model="product.product" id="ghu_doctoral_application_fee">
            <field name="default_code">Doctoral Application Fee</field>
            <field name="name">Doctoral Application Fee</field>
            <field name="lst_price">500</field>
            <field name="type">service</field>
        </record>
    </data>
</odoo>
