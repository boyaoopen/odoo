<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <report id="enrolment_confirmation_pdf" model="ghu.student" string="Enrolment Confirmation" report_type="qweb-pdf" name="ghu.enrolment_confirmation" />
        <template id="enrolment_confirmation">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page align-center">
                            <div class="watermark" style="position:absolute;opacity:0.25;font-size:3em;width:100%;text-align:center;z-index:1000;top:5cm;">
                                <img src="/ghu/static/img/watermark.png" />
                            </div>
                            <h1 class="text-center" style="margin: 8cm 0 2cm;">Confirmation of enrolment</h2>
                            <div class="row" style="margin: 1cm 0;">
                                <div class="col-8 offset-2">
                                    <p class="h3 text-center">
                                        <t t-esc="o.academic_degree_pre" /><br/>
                                        <div style="margin-bottom: 1cm"><strong><t t-esc="o.partner_id.firstname" />
                                        <t t-esc="o.partner_id.lastname" /></strong></div>
                                        <t t-if="o.academic_degree_post"><br/><t t-esc="o.academic_degree_post" /></t><br/>
                                        born on <t t-esc="o.date_of_birth.strftime('%m/%d/%Y')" /> has enrolled on <t t-esc="o.create_date.strftime('%m/%d/%Y')" /> at <strong>Global Humanistic University</strong>.
                                    </p>
                                </div>
                            </div>
                            <div class="row" style="margin: 2cm 0;">
                                <div class="col-8 offset-2">
                                    <table class="table h5">
                                        <tr>
                                            <td>Name</td>
                                            <td colspan="3">
                                                <t t-esc="o.academic_degree_pre" />
                                                <t t-esc="o.partner_id.firstname" />
                                                <t t-esc="o.partner_id.lastname" />
                                                <t t-esc="o.academic_degree_post" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Date of birth</td>
                                            <td>
                                                <t t-esc="o.date_of_birth.strftime('%m/%d/%Y')" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Nationality</td>
                                            <td>
                                                <t t-esc="o.nationality.name" />
                                            </td>
                                        </tr>
                                        <tr>
                                            <td>Student ID</td>
                                            <td>
                                                <t t-esc="o.student_identification" />
                                            </td>
                                        </tr>
                                    </table>
                                </div>
                            </div>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>