<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <report id="enrolment_confirmation_pdf" model="ghu.student" string="Enrolment Confirmation" report_type="qweb-pdf" name="ghu.enrolment_confirmation" />
        <template id="enrolment_confirmation">
            <t t-call="web.html_container">
                <t t-foreach="docs" t-as="o">
                    <t t-call="web.external_layout">
                        <div class="page">
                            <h2 class="mt-3">Confirmation of enrolment</h2>
                            <p>
                                <t t-esc="o.academic_degree_pre" />
                                <t t-esc="o.partner_id.firstname" />
                                <t t-esc="o.partner_id.lastname" />
                                <t t-esc="o.academic_degree_post" />
                                , born on <t t-esc="o.date_of_birth" /> has enrolled on <t t-esc="o.create_date" /> at Global Humanistic University.
                            </p>
                        </div>
                    </t>
                </t>
            </t>
        </template>
    </data>
</odoo>