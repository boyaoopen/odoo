<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <record model="mail.template" id="mail_application_advisor_search_notification">
            <field name="name">Doctoral Applicant needs advisor</field>
            <field name="model_id" ref="model_ghu_application"></field>
            <field name="subject">Doctoral Applicant needs advisor</field>
            <field name="body_html"><![CDATA[
                <p>${object.firstname} ${object.lastname} is searching for an advisor. Please login to Odoo and search one.</p>
            ]]>            </field>
            <field name="email_from">office@ghu.edu.cw</field>
            <field name="use_default_to">false</field>
            <field name="email_to">doctor@ghu.edu.cw</field>
            <field name="user_signature">false</field>
            <field name="auto_delete">false</field>
        </record>
    </data>
</odoo>