<odoo>
    <data>
        <template id="campus_documents" name="All documents for user">
          <t t-call="portal.portal_layout">
            <t t-set="breadcrumbs_searchbar" t-value="True"/>

            <t t-call="portal.portal_searchbar">
                <t t-set="title">Documents</t>
            </t>
            <h3>Your Documents</h3>
            <t t-if="not documents">
                <p>There are currently no documents for your account.</p>
            </t>
            <t t-if="documents" t-call="portal.portal_table">
                <thead>
                    <tr class="active">
                        <th>Document</th>
                        <th>Publication Date</th>
                    </tr>
                </thead>
                <tbody>
                    <t t-foreach="documents" t-as="document">
                        <tr>
                            <td>
                                <a t-attf-href="/web/content/#{document.id}?download=true&amp;access_token=#{document.access_token}" t-att-title="document.name">
                                    <t t-esc="document.name"/>
                                </a>
                            </td>
                            <td><span t-field="document.__last_update"/></td>
                        </tr>
                    </t>
                </tbody>
            </t>
          </t>
        </template>
        <template id="ghu_document_link" name="Link to GHU documents" inherit_id="portal.frontend_layout">
            <xpath expr="//a[@id='o_logout']" position="before">
                <a href="/campus/documents" role="menuitem" class="dropdown-item">GHU Documents</a>
            </xpath>
        </template>
    </data>
</odoo>