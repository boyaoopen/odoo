<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="0">
        <!-- Application page -->
        <record id="application_doctoral_program_view" model="ir.ui.view">
            <field name="name">Application for Doctoral Program</field>
            <field name="type">qweb</field>
            <field name="key">ghu.apply_doctoral</field>
            <field name="arch" type="xml">
                <t name="Application for Doctoral Program" t-name="ghu.apply_doctoral">
                    <t t-call="website.layout">
                        <div id="wrap">
                            <div class="oe_structure">
                                <section class="pt8 pb8">
                                    <div class="container">
                                        <div class="row s_nb_column_fixed">
                                            <div class="col-lg-12 s_title pt16 pb16">
                                                <h1>Application for Doctoral Program</h1>
                                            </div>
                                        </div>
                                    </div>
                                </section>
                            </div>
                            <div class="container mt-2">
                                <div class="row">
                                    <div class="col-lg-12 pt48 pb48">
                                        <form action="/website_form/" method="post" class="s_website_form card bg-white" enctype="multipart/form-data" data-model_name="ghu.application" data-success_page="/apply-doctoral-program/thank-you">
                                            <div class="card-header">
                                                <ul class="nav nav-tabs card-header-tabs" role="tablist">
                                                    <li class="nav-item">
                                                        <a class="nav-link o_default_snippet_text active show" id="application_doctoral_program_view_personal_link" data-toggle="tab" href="#application_doctoral_program_view_personal_content" role="tab" aria-controls="application_doctoral_program_view_personal_content" aria-selected="true">Personal Data</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link o_default_snippet_text" id="application_doctoral_program_view_residential_address_link" data-toggle="tab" href="#application_doctoral_program_view_residential_address_content" role="tab" aria-controls="application_doctoral_program_view_residential_address_content" aria-selected="false">Residential Address</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link o_default_snippet_text" id="application_doctoral_program_view_study_program_link" data-toggle="tab" href="#application_doctoral_program_view_study_program_content" role="tab" aria-controls="application_doctoral_program_view_study_program_content" aria-selected="false">Study Program</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link o_default_snippet_text" id="application_doctoral_program_view_documents_link" data-toggle="tab" href="#application_doctoral_program_view_documents_content" role="tab" aria-controls="application_doctoral_program_view_documents_content" aria-selected="false">Required Documents</a>
                                                    </li>
                                                    <li class="nav-item">
                                                        <a class="nav-link o_default_snippet_text" id="application_doctoral_program_view_payment_link" data-toggle="tab" href="#application_doctoral_program_view_payment_content" role="tab" aria-controls="application_doctoral_program_view_payment_content" aria-selected="false">Payment Data</a>
                                                    </li>
                                                </ul>
                                            </div>
                                            <div class="card-body tab-content">
                                                <div class="tab-pane fade active show" id="application_doctoral_program_view_personal_content" role="tabpanel" aria-labelledby="application_doctoral_program_view_personal_link">
                                                    <p class="o_default_snippet_text">
                                                        Please fill out your personal data.
                                                    </p>
                                                </div>
                                                <div class="tab-pane fade" id="application_doctoral_program_view_residential_address_content" role="tabpanel" aria-labelledby="application_doctoral_program_view_residential_address_link">
                                                    <p class="o_default_snippet_text">
                                                        Please fill out your residential address data.
                                                    </p>
                                                </div>
                                                <div class="tab-pane fade" id="application_doctoral_program_view_study_program_content" role="tabpanel" aria-labelledby="application_doctoral_program_view_study_program_link">
                                                    <p class="o_default_snippet_text">
                                                        Please fill out your study program data.
                                                    </p>
                                                </div>
                                                <div class="tab-pane fade" id="application_doctoral_program_view_documents_content" role="tabpanel" aria-labelledby="application_doctoral_program_view_documents_link">
                                                    <p class="o_default_snippet_text">
                                                        Please upload your required documents.
                                                    </p>
                                                </div>
                                                <div class="tab-pane fade" id="application_doctoral_program_view_payment_content" role="tabpanel" aria-labelledby="application_doctoral_program_view_payment_link">
                                                    <p class="o_default_snippet_text">
                                                        Please fill out your payment data.
                                                    </p>

                                                    <button class="btn o_website_form_send o_default_snippet_text btn-primary">Submit Application</button>
                                                    <span id="o_website_form_result"></span>
                                                </div>
                                            </div>
                                        </form>
                                    </div>
                                </div>
                            </div>
                            <div class="oe_structure mt-2"/>
                        </div>
                    </t>
                </t>
            </field>
        </record>
        <record id="application_doctoral_program_page" model="website.page">
            <field name="url">/apply-doctoral-program</field>
            <field name="website_published">True</field>
            <field name="view_id" ref="application_doctoral_program_view"/>
        </record>
    </data>
</odoo>
