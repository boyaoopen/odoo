<odoo>
  <data>
    <!-- explicit list view definition -->
    <record model="ir.ui.view" id="ghu_custom_mba.list">
      <field name="name">ghu_custom_mba list</field>
      <field name="model">ghu_custom_mba.course</field>
      <field name="arch" type="xml">
        <tree>
          <field name="name"/>
          <field name="long_name"/>
          <field name="description"/>
        </tree>
      </field>
    </record>

    <!-- actions opening views on models -->
    <record model="ir.actions.act_window" id="ghu_custom_mba.action_window">
      <field name="name">ghu_custom_mba window</field>
      <field name="res_model">ghu_custom_mba.course</field>
      <field name="view_mode">tree,form</field>
    </record>

    <!-- server action to the one above -->
    <record model="ir.actions.server" id="ghu_custom_mba.action_server">
      <field name="name">ghu_custom_mba server</field>
      <field name="model_id" ref="model_ghu_custom_mba_course"/>
      <field name="state">code</field>
      <field name="code">
        action = {
          "type": "ir.actions.act_window",
          "view_mode": "tree,form",
          "res_model": self._name,
        }
      </field>
    </record>
    

    <!-- Top menu item -->

    <!-- menu categories -->
    <menuitem name="Custom MBA" id="ghu_custom_mba.menu_1" parent="ghu.menu_ghu"/>
    <!-- actions -->
    <menuitem name="List" id="ghu_custom_mba.menu_1_list" parent="ghu_custom_mba.menu_1"
              action="ghu_custom_mba.action_window"/>
    <menuitem name="Server to list" id="ghu_custom_mba" parent="ghu_custom_mba.menu_1"
              action="ghu_custom_mba.action_server"/>
  </data>
</odoo>