<odoo>
    <data noupdate="0">
        <template id="courseedit">
            <t t-call="website.layout">
                <t t-set="title">
                    <t t-if="object['display_name']">Edit <t t-esc="object['display_name']"/>
                    </t>
                    <t t-else="">New Course</t>
                </t>
                <section class="bg-beta oe_custom_bg pb0 pt0">
                    <div class="container">
                        <div class="row s_nb_column_fixed">
                            <div class="col-lg-12 s_title pt16 pb16" style="text-align: center;">
                                <h1 class="s_title_default" style="text-align: left; ">
                                    <font style="font-size: 62px;">
                                        <t t-if="object['display_name']">Edit <t t-esc="object['display_name']"/>
                                        </t>
                                        <t t-else="">New Course</t>
                                    </font>
                                </h1>
                            </div>
                        </div>
                    </div>
                </section>
                <div id="wrap" class="container mt-5 mb-5">
                    <div class="row">
                        <div class="col-6">
                            <form t-attf-action="#{ root }/save/#{ object['id'] }" method="post" class="s_website_form bg-white" enctype="multipart/form-data" data-force_action="create_application" data-success_page="/apply-doctoral-program/thank-you">
                                <div class="hidden">
                                    <input type="hidden" name="course" t-att-value="object['id']" />
                                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                                </div>
                                <div class="form-group">
                                    <label for="name">Module name</label>
                                    <input type="text" name="name" class="form-control" t-att-value="object['name']" id="name" aria-describedby="nameHelp" placeholder="Enter name" />
                                    <small id="nameHelp" class="form-text text-muted">This is the name used to advertise the module in campus.</small>
                                </div>
                                <div class="form-group">
                                    <label for="longName">Long module name</label>
                                    <input type="text" name="long_name" class="form-control" t-att-value="object['long_name']" id="longName" aria-describedby="longNameHelp" placeholder="Long module name" />
                                    <small id="longNameHelp" class="form-text text-muted">This is the name used to give more information on the module in campus.</small>
                                </div>
                                <div class="form-group">
                                    <label for="language" class="control-label" title="">Language <span class="mandatory">*</span></label>
                                    <select required="required" class="form-control-file" id="language" name="language">
                                        <t t-foreach="languages" t-as="language">
                                            <option t-att-value="language.id">
                                                <t t-esc="language.display_name"/>
                                            </option>
                                        </t>
                                    </select>
                                </div>
                                <div class="form-field form-group">
                                    <label for="script" class="control-label" title="As PDF File">Script <span class="mandatory">*</span></label>
                                    <input accept=".pdf" class="form-control" id="script" type="file" name="script_file" />
                                </div>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </form>
                        </div>
                    </div>
                </div>
            </t>
            <t t-call-assets="ghu_custom_mba.assets_vue"></t>
        </template>
    </data>
</odoo>