<odoo>
    <data noupdate="0">
        <template id="assessment_edit">
            <t t-call="ghu_campus_style.campus_layout">
                <t t-set="title">
                    <t t-if="object['display_name']">Edit Assessment: <t t-esc="object['display_name']"/> of course <t t-esc="course['display_name']"/> 
                    </t>
                    <t t-else="">New Assessment in <t t-esc="course['display_name']"/> </t>
                </t>
                <form t-attf-action="#{ root }/course/#{ course['id'] }/assessment/save/#{ object['id'] }" method="post" class="s_website_form" enctype="multipart/form-data">
                    <div class="media align-items-center mb-headings">
                        <div class="media-body">
                            <h1 class="h2">
                                <t t-if="object['display_name']">Edit Assessment: <t t-esc="object['display_name']"/> of course <t t-esc="course['display_name']"/> 
                                </t>
                                <t t-else="">New Assessment in <t t-esc="course['display_name']"/> </t>
                            </h1>
                        </div>
                        <div class="media-right">
                            <button type="submit" class="btn btn-primary">Save</button>
                        </div>
                    </div>

                    <div class="hidden">
                        <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    </div>
                    <div class="row">
                        <div class="col-md-8">
                            <div class="card">
                                <div class="card-header">
                                    <h4 class="card-title">Configuration</h4>
                                </div>
                                <div class="card-body">
                                    <div class="form-group">
                                        <label class="form-label" for="title">Title</label>
                                        <input type="text" name="name" class="form-control" t-att-value="object['name']" id="name" aria-describedby="nameHelp" placeholder="Enter name" />
                                        <small id="nameHelp" class="form-text text-muted">Title of the assessment.</small>
                                    </div>
                                    <div class="form-group">
                                        <label for="program_id" class="form-label" title="">Assessment Type<span class="mandatory">*</span>
                                        </label>
                                        <select required="required" class="form-control-file" id="program_id" name="program_id">
                                            <t t-foreach="types" t-as="type">
                                                <option t-att-value="type[0]">
                                                    <t t-esc="type[1]"/>
                                                </option>
                                            </t>
                                        </select>
                                    </div>
                                </div>
                                <button type="submit" class="btn btn-primary">Save</button>
                            </div> 
                        </div>
                    </div>
                </form>
            </t>
        </template>
    </data>
</odoo>