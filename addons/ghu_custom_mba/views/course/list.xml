<odoo>
    <data noupdate="0">
        <template id="courselist">
            <t t-call="website.layout">
                <section class="bg-beta oe_custom_bg pb0 pt0">
                    <div class="container">
                        <div class="row s_nb_column_fixed">
                            <div class="col-lg-12 s_title pt16 pb16" style="text-align: center;">
                            <h1 class="s_title_default" style="text-align: left; ">
                                <font style="font-size: 62px;">My Modules</font>
                            </h1>
                            <p class="s_title_default pt0" style="text-align: left; ">
                                <font style="font-size: 36px;">Manage and create modules</font>
                            </p>
                            </div>
                        </div>
                    </div>
                </section>
                <div id="wrap" class="container mt-5 mb-5">
                    <div class="row">
                        <div class="col-10 offset-1">
                            <div class="row">
                                <div class="col-4" t-foreach="objects" t-as="object">
                                    <div class="card">
                                        <div class="card-body">
                                            <h5 class="card-title">
                                                <i t-if="object.program_id.code == 'finance'" class="fas fa-landmark"></i>
                                                <i t-elif="object.program_id.code == 'law'" class="fas fa-gavel"></i>
                                                <i t-else="" class="fas fa-building"></i>
                                                <a t-attf-href="#{ root }/objects/#{ object.id }">  
                                                    <t t-esc="object.display_name"/>
                                                </a>
                                            </h5>
                                            <a t-attf-href="#{ root }/objects/#{ object.id }" class="btn btn-primary">See details</a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </t>
        </template>
    </data>
</odoo>